<ul class="media-list">
  <% posts.each do |micropost| %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(micropost.user, options = { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to micropost.user.name, user_path(micropost.user) %> <span class="text-muted">posted at <%= micropost.created_at %></span>
        </div>
        <div>
          <p><%= micropost.content %></p>
        </div>
        <div>
           <%= render 'favorites/favorite_button', post: micropost %><%#0310 add %>
            <% if current_user == micropost.user %>
              <%=  link_to "Delete",micropost,method: :delete,data: { confirm: "Are you sure?" },class: 'btn btn-danger btn-xs' %>
            <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate posts %>
</ul>